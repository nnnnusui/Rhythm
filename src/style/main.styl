@import "reset"

&
  position relative
  width 100%
  height 100%
  overflow hidden

.source-container
  position absolute
  width 100%
  height 100%
  .source
    position absolute
    width 100%
    height 100%
    &:not(.selected)
      visibility hidden

.starter
  position absolute
  width 100%
  height 100%

.game
  position absolute
  width 100%
  height 100%
  @import "game/main"

.game:not(.preview) + .score-select-menu
  display none
.score-select-menu
  position absolute
  width 100%
  height 100%
  display flex
  align-items center
  >h1
    display none
  .choice
    width 10em
    height 10em
    border 1px solid black
    background rgba(black, 0.4)
    &.chosen
      color black
      background rgba(white, 0.4)

.screen-transition
  position absolute
  width 100%
  height 100%
  @import "screenTransition/main"
