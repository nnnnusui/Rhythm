@import "logic"

&
  position absolute
  width 100%
  height 100%

.action-detector
  touch-action none
  position absolute
  width 100%
  height 100%

.player
  -webkit-user-select none
  user-select none
  position absolute
  width 100%
  height 100%

.progress
  height 1px
  bottom 0
  background-color white

.view
  perspective 10vmin
  perspective-origin top
  display flex
  justify-content center
  align-items center

.lanes
  transform rotateX(45deg)
  transform-origin bottom
  overflow hidden
  background rgba(#000000, 0.2)

.judge-line
  width 100%
  height 0
  border-style solid
  border-width 0
  border-bottom-width 1px
  background rgba(red, 0.2)

.judge-view
  pointer-events none
  position absolute
  background rgba(#000000, 0.4)
  font-size 3em
  font-weight 600

.result
  display flex
  flex-direction column
  justify-content center
  align-items center
  background rgba(#333, 0.6)
  .judge-count
    display grid
    justify-content center
    align-content center
    column-gap 1.2em
    .judge
      grid-column 1
    .count
      grid-column 2


.in-game-menu
  width 100%
  height 100%
  background rgba(black, 0.4)
  display flex
  justify-content center
  align-items center
  flex-direction column
  .actions
    width 100%
    height 50%
    display flex
    justify-content center
    align-items center
    flex-direction row
    .button
      width 100%
      height 100%
      &.play
        background rgba(white, 0.2)
      &.restart
        background rgba(black, 0.2)
      &.exit
        background rgba(black, 0.6)
  .parameters
    width 100%
    display flex
    justify-content center
    align-items center
    flex-direction column
    fieldset
      width 100%
    legend
      text-align center

.number-inputter
  position relative
  width 100%
  input[type="number"]
    width 100%
    text-align center
  input[type="range"]
    position absolute
    left 0
    bottom 0
    width 100%
    height 0
    border-style solid
    border-width 0
    border-top-width 1px
    &::-webkit-slider-thumb
      width 1em
      height 0.55em
      background-color white
      border-radius 0 0 25% 25%
