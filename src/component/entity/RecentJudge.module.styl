.RecentJudge
  position absolute
  left 50%
  bottom 38%
  transform translateX(-50%)
  line-height 1.2em

  font-size 5em
  font-weight 200
  font-style italic
  color #fff
  border-bottom 1px solid #fff

  animation-duration .8s
  animation-name fadeout
  animation-fill-mode forwards
  animation-timing-function linear

  --neon-text-color #f40
  --neon-border-color #08f
  $base = .12em
  text-shadow:
    -0.2rem -0.2rem 1rem #fff,
    0.2rem 0.2rem 1rem #fff,
    0 0 $base*2 var(--neon-text-color),
    0 0 $base*4 var(--neon-text-color),
    0 0 $base*6 var(--neon-text-color),
    0 0 $base*8 var(--neon-text-color),
    0 0 $base*10 var(--neon-text-color)

@keyframes fadeout
  from
    opacity 1
  to
    opacity 0
