.JudgeEffect
  position absolute
  width 100%
  height 100%

  animation-duration .2s
  animation-fill-mode forwards
  animation-timing-function linear

.Effect
  animation-name fadeOut

  --neon-text-color #f40
  --neon-border-color #08f
  $base = .12em
  box-shadow:
    -0.2rem -0.2rem 1rem #fff,
    0.2rem 0.2rem 1rem #fff,
    0 0 $base*2 var(--neon-text-color),
    0 0 $base*4 var(--neon-text-color),
    0 0 $base*6 var(--neon-text-color),
    0 0 $base*8 var(--neon-text-color),
    0 0 $base*10 var(--neon-text-color)

.Suppress
  animation-name none

@keyframes fadeOut
  from
    opacity 1
  to
    opacity 0
