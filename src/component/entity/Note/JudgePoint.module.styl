.JudgePoint
  position absolute
  transform translateY(-50%)

.View
  position absolute
  width 100%
  height 100%

  box-sizing border-box
  border-width 1px 0 1px 0
  border-color white
  border-style solid

  animation-duration .1s
  animation-name fadeIn
  animation-fill-mode forwards
  animation-timing-function linear

.Disappear
  animation-name fadeOut

@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

@keyframes fadeOut
  from
    opacity 1
  to
    opacity 0
