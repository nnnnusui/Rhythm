.Note
  position absolute
  width 100%
  height 1em
  transform translateY(-50%)

  animation-name topToBottom
  animation-play-state paused
  animation-fill-mode forwards
  animation-timing-function linear

  box-sizing border-box
  border-style solid
  border-width 1px
  border-color white

@keyframes topToBottom
  0%
    top 0
  50%
    top 80%
  100%
    top 160%
