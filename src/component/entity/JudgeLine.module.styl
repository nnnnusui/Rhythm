.JudgeLine
  position absolute
  top 80%
  width 100%
  height .4em
  transform translateY(-50%)

  box-sizing border-box
  border-width 1px 0 1px 0
  border-color white
  border-style solid

.JudgeGlow
  width 100%
  height 100%

  animation-duration .2s
  animation-name fadeout
  animation-fill-mode forwards
  animation-timing-function linear

  --neon-text-color #f40
  --neon-border-color #08f
  $base = .12em
  box-shadow:
    -0.2rem -0.2rem 1rem #fff,
    0.2rem 0.2rem 1rem #fff,
    0 0 $base*2 var(--neon-text-color),
    0 0 $base*4 var(--neon-text-color),
    0 0 $base*6 var(--neon-text-color),
    0 0 $base*8 var(--neon-text-color),
    0 0 $base*10 var(--neon-text-color)

.Suppress
  animation-name none

@keyframes fadeout
  from
    opacity 1
  to
    opacity 0
